cabal-version: 2.2
name:          fosskers
version:       1.3.4
synopsis:      My personal site.
description:   My personal site.
homepage:      https://github.com/fosskers/fosskers.ca
category:      Web
author:        Colin Woodbury
maintainer:    colin@fosskers.ca
license:       BSD-3-Clause
build-type:    Simple

common commons
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    OverloadedStrings

  ghc-options:
    -Wall -Wpartial-fields -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Widentities -funclutter-valid-hole-fits
    -fmax-relevant-binds=0

  build-depends:
    , aeson                 >=1.2 && <2.2
    , base                  >=4.8 && <4.19
    , base-prelude          >=1.3 && <1.7
    , containers
    , hourglass             ^>=0.2
    , lucid                 >= 2.9 && < 2.12
    , megaparsec            >=7.0 && <10
    , org-mode              ^>=2.1
    , org-mode-lucid        ^>=1.7
    , text
    , time
    , transformers          >=0.5 && < 0.7
    , unordered-containers
    , xmlbf                 >=0.3 && <0.8

library
  import:          commons
  hs-source-dirs:  lib
  exposed-modules: Fosskers.Common
  build-depends:   filepath ^>=1.4

-- test-suite fosskers-test
