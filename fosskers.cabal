executable server
  import:         commons
  hs-source-dirs: server
  main-is:        Main.hs
  ghc-options:    -threaded -with-rtsopts=-N -rtsopts
  other-modules:
    Fosskers.Site
    Fosskers.Site.About
    Fosskers.Site.AlBhed
    Fosskers.Site.Blog
    Fosskers.Site.CV
    Fosskers.Site.Drj
    Fosskers.Site.GameOfLife
    Fosskers.Site.Love
    Fosskers.Site.Otama
    Fosskers.Site.SeedEffects
    Fosskers.Site.Twitch
    Fosskers.Site.WebEffects

  build-depends:
    , binary
    , bytestring
    , directory             ^>=1.3
    , filepath              ^>=1.4
    , fosskers
    , http-types            ^>=0.12
    , microlens             ^>=0.4
    , mtl                   >=2.2 && < 2.4
    , optparse-applicative  >= 0.16 && < 0.19
    , skylighting           >=0.8 && < 0.15
    , skylighting-lucid     ^>=1.0
    , wai                   ^>=3.2
    , wai-app-static        ^>=3.1
    , wai-extra             >=3.0 && < 3.2
    , warp                  >=3.2   && <3.4
