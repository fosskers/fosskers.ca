cabal-version: 2.2
name:          fosskers
version:       1.0.0
synopsis:      My personal site.
description:   My personal site.
homepage:      https://github.com/fosskers/fosskers.ca
category:      Web
author:        Colin Woodbury
maintainer:    colin@fosskers.ca
license:       BSD-3-Clause
build-type:    Simple

common commons
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    BangPatterns
    LambdaCase
    OverloadedStrings
    TupleSections
    TypeApplications

  ghc-options:
    -Wall -Wpartial-fields -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Widentities -funclutter-valid-hole-fits
    -fmax-relevant-binds=0

  build-depends:
    , aeson                >=1.2  && <1.5
    , base                 >=4.8  && <4.14
    , hourglass            ^>=0.2
    , kanji                ^>=3.4
    , lucid                ^>=2.9
    , megaparsec           >=7.0  && <9
    , nonempty-containers  ^>=0.3
    , org-mode             ^>=1.0
    , org-mode-lucid       ^>=1.0
    , rio                  ^>=0.1
    , servant              >=0.11 && <0.17
    , servant-lucid        >=0.7  && <0.10
    , servant-xml          ^>=1.0
    , xmlbf                >=0.3  && <0.7

library
  import:          commons
  hs-source-dirs:  lib
  exposed-modules:
    Fosskers.Common
    Fosskers.Kanji
    Fosskers.Org

  build-depends:   filepath ^>=1.4

