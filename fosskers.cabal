executable server
  import:         commons
  hs-source-dirs: server
  main-is:        Server.hs
  ghc-options:    -threaded -with-rtsopts=-N
  other-modules:
    Fosskers.Site
    Fosskers.Site.About
    Fosskers.Site.Blog
    Fosskers.Site.Bootstrap
    Fosskers.Site.CV

  build-depends:
    , errors            ^>=2.3
    , fosskers
    , generic-lens      >=1.1   && <1.3
    , lucid             ^>=2.9
    , microlens         ^>=0.4
    , optparse-generic  >=1.2   && <1.4
    , servant-server    >=0.11  && <0.17
    , shelly            >=1.7   && <1.10
    , these             ^>=1.0.1
    , time
    , transformers      ^>=0.5
    , unliftio          ^>=0.2
    , wai-extra         ^>=3.0
    , warp              >=3.2   && <3.4
