cabal-version: 2.2
name:          fosskers
version:       1.0.0
synopsis:      My personal site.
description:   My personal site.
homepage:      https://github.com/fosskers/fosskers.ca
category:      Web
author:        Colin Woodbury
maintainer:    colin@fosskers.ca
license:       BSD-3-Clause
build-type:    Simple

common commons
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    OverloadedStrings

  ghc-options:
    -Wall -Wpartial-fields -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Widentities -funclutter-valid-hole-fits
    -Wmissing-deriving-strategies

  build-depends:
    , aeson                 >=1.2  && <1.5
    , base                  >=4.8  && <4.14
    , base-prelude          ^>=1.3
    , bytestring
    , containers
    , hourglass             ^>=0.2
    , kanji                 ^>=3.4
    , lucid                 ^>=2.9
    , megaparsec            >=7.0  && <9
    , servant               >=0.11 && <0.17
    , servant-lucid         >=0.7  && <0.10
    , servant-xml           ^>=1.0
    , text                  ^>=1.2
    , unordered-containers
    , xmlbf                 >=0.3  && <0.7

library
  import:          commons
  hs-source-dirs:  lib
  exposed-modules:
    Fosskers.Common
    Fosskers.Kanji
    Fosskers.Org

