executable server
  import:         commons
  hs-source-dirs: server
  main-is:        Server.hs
  ghc-options:    -threaded -with-rtsopts=-N
  other-modules:  Fosskers.Site
  build-depends:
    , filepath          ^>=1.4
    , fosskers
    , lucid             ^>=2.9
    , optparse-generic  >=1.2  && <1.4
    , servant-server    >=0.11 && <0.17
    , shelly            >=1.7  && <1.10
    , wai-extra         ^>=3.0
    , warp              >=3.2  && <3.4
